        <TextBlock Grid.Column = "2" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" FontSize="36" MouseDown="TextBlock_MouseDown"><Run Language="de-de" Text="?"/></TextBlock>
